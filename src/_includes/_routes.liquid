---
layout: _base
---

{{ content }}

{% for r in routeData %}
  <section>
    <h2>
      {{ r.name }}
    </h2>

    <table>
      <thead>
        <th></th>
        {% for dayTitle in r.stops[0].data.daily %}
          <th>{{ dayTitle.dt | day }}</th>
        {% endfor %}
      </thead>
      {% for s in r.stops %}
        <tr>
          <th>{{ s.city }}</th>
          {% for d in s.data.daily %}
            <td class="{{ d | precipClasses }}" style="{{ d | precipStyles }}">
              <p class="condition">
                <span>{{ d.temp.day | round }}°</span>
                <span>{{ d.weather[0].main }}</span>
              </p>
              {% if d.rain %}
                <p class="precip">Rain: {{ d.rain | roundMM }}″</p>
              {% endif %}
              {% if d.snow %}
                <p class="precip">Snow: {{ d.snow | roundMM }}″</p>
              {% endif %}
              <p class="wind">
                Wind: {{ d.wind_speed | round }} ⋮ {{ d.wind_gust | round }}</p>
            </td>
          {% endfor %}
        </tr>
      {% endfor %}
    </table>
  </section>
{% endfor %}
