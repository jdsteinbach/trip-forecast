---
layout: _base
---

{{ content }}

<input type="checkbox" id="reverse" name="reverse" '/>
<label for="reverse">Reverse Trip</label>

{% for r in routeData %}
<div class="scrollable">
  <section>
    <div class="routes">
      <div class="routes__header">
        <div class="routes__column__label route-name">{{ r.name }}</div>
          {% for dayTitle in r.stops[0].data.daily %}
          <div class="routes__column__label">{{ dayTitle.dt | day }}</div>
        {% endfor %}
      </div>
      {% for s in r.stops %}
      <div class="routes__row" style="--original-order: {{ forloop.index }}">
        <div class="routes__row__label">{{ s.city }}</div>
        {% for d in s.data.daily %}
        <div class="routes__row__data {{ d | precipClasses }}" style="{{ d | precipStyles }}">
          <p class="condition">
            <span>{{ d.temp.day | round }}°</span>
            <span>{{ d.weather[0].main }}</span>
          </p>
          {% if d.rain %}
          <p class="precip">
            <span>Rain:</span>
            <span>{{ d.rain | roundMM }}″</span>
          </p>
          {% endif %}
          {% if d.snow %}
          <p class="precip">
            <span>Snow:</span>
            <span>{{ d.snow | roundMM }}″</span>
          </p>
          {% endif %}
          <p class="wind">
            <span>Wind:</span>
            <span class="wind__icon" style="--degrees: {{ d.wind_deg }}deg" aria-label="Wind direction: {{ d.wind_deg | degrees }}">↑</span>
            <span>{{ d.wind_speed | round }} ⋮ {{ d.wind_gust | round }}</span>
          </p>
        </div>
        {% endfor %}
      </div>
      {% endfor %}
    </div>
    </section>
  {% endfor %}
</div>
