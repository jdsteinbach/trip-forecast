<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>

    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    {{ content }}
  </body>
  <script>
    const modalOpenButtons = document.querySelectorAll('button[data-modal-open]');
    modalOpenButtons.forEach(b => {
      const modal = document.getElementById(b.dataset.modalOpen);
      if (modal) {
        b.addEventListener('click', (e) => {
          e.preventDefault();

          if (modal.getAttribute('open')) {
            modal.removeAttribute('open');
          } else {
            const maybeOpenModals = document.querySelectorAll('modal[role="dialog"][open]');
            maybeOpenModals.forEach(m => {
              m.removeAttribute('open');
            });
            modal.setAttribute('open', true);
          }
        });
      }
    });

    const modalCloseButtons = document.querySelectorAll('button[data-modal-close]');
    modalCloseButtons.forEach(b => {
      const modal = document.getElementById(b.dataset.modalClose);
      b.addEventListener('click', (e) => {
        e.preventDefault();
        modal.removeAttribute('open');
      });
    });
  </script>
</html>